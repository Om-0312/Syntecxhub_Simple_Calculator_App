<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="horizontal"
    android:padding="8dp"
    android:paddingTop="8dp"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btnRotate"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_rotate"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="#444444"
        />

    <!-- LEFT SIDE: Display Screen -->
    <androidx.cardview.widget.CardView
        android:id="@+id/displayCard"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/previousCalculationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="#80FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:maxLines="1"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- RIGHT SIDE: Keypad -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:columnCount="4"
            android:padding="8dp"
            android:rowCount="5">

            <!-- Row 1 -->
            <Button
                android:id="@+id/btnClear"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/button_clear_background"
                android:text="C" />

            <Button
                android:id="@+id/btnBackspace"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/button_operator_background"
                app:icon="@drawable/ic_backspace"
                app:iconGravity="textStart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPercent"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/button_operator_background"
                android:text="%" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDivide"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/button_operator_background"
                android:text="/" />

            <!-- Row 2 -->
            <Button
                android:id="@+id/btn7"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/button_background"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/button_background"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/button_background"
                android:text="9" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMultiply"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/button_operator_background"
                android:text="x" />

            <!-- Row 3 -->
            <Button
                android:id="@+id/btn4"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/button_background"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/button_background"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/button_background"
                android:text="6" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSub"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/button_operator_background"
                android:text="-" />

            <!-- Row 4 -->
            <Button
                android:id="@+id/btn1"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/button_background"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/button_background"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/button_background"
                android:text="3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAdd"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/button_operator_background"
                android:text="+" />

            <!-- Row 5 -->
            <Button
                android:id="@+id/btn0"
                style="@style/CalculatorButton"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/button_background"
                android:text="0" />

            <Button
                android:id="@+id/btnPoint"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/button_background"
                android:text="." />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEqual"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/button_equal_background"
                android:text="=" />

        </GridLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
